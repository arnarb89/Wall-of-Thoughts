extends layout

block content
  div.LoginRegisterWidth
    div.middleAligned
      | Login  
      b  | 
      a(href='/register') Register
    br
    br
    form(method="post")
      fieldset.form-group
        //label(for="username") Username
        input(id="username" type="text" placeholder="Username" name="username" autofocus).form-control
      fieldset.form-group
        //label(for="password") Password
        input(id="password" type="password" name="password" placeholder="Password").form-control
      div.fullWidth
        input(type="submit").form-control.SubmitWidth
      br
      if theError
        div.fullWidth
          span= theError
            a(href='/login') Try again.
